<h1>Posts:</h1>
<%= link_to "Create New Post", new_post_path %>
<table class="table-hover">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Num of Authors</th>
    <th>Num of Comments</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.authors.count %></td>
      <td><%= post.comments.count %></td>
      <td><%= link_to "Show", post_path(post.id) %></td>
      <td><%= link_to "Edit", edit_post_path(post.id) %></td>
      <td><%= link_to "Delete", post_path(post.id), method: :delete, data: {confirm: "Are you sure you want to delete?"} %></td>
    </tr>
  <% end %>
</table>